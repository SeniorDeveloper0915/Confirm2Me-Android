<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Navigatioin View -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/NavigationColor">

        <com.erik.confirm2me.customcontrol.Confirm2MeButton
            android:id="@+id/btnCancel"
            android:layout_width="54dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|left"
            app:typeface="lato"
            android:textSize="@dimen/text_small"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:background="@null"/>

        <com.erik.confirm2me.customcontrol.Confirm2MeTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:typeface="lato"
            android:textColor="@color/White"
            android:textSize="@dimen/text_medium"
            android:text="Reset Password"/>

        <com.erik.confirm2me.customcontrol.Confirm2MeButton
            android:id="@+id/btnReset"
            android:layout_width="54dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|right"
            app:typeface="lato"
            android:textSize="@dimen/text_small"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:background="@null"/>

    </FrameLayout> <!-- Navigation View -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/xlarge"
        android:orientation="vertical">

        <com.erik.confirm2me.customcontrol.Confirm2MeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            app:typeface="lato_bold"
            android:text="@string/app_reset_password"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:textSize="@dimen/text_xsmall"/>

        <com.erik.confirm2me.customcontrol.Confirm2MeEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/text_xsmall"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            app:typeface="lato"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_small"
            android:textAlignment="center"/>


    </LinearLayout>

</LinearLayout>
