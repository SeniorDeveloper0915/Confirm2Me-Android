<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/GreenColor">

    <ImageView
        android:id="@+id/tab_selector"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/light"
        android:layout_marginRight="@dimen/light"
        android:scaleType="centerCrop"
        android:src="@drawable/tabbar_selector"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_tabicon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/tabbar_icon_profile_selected"/>

        <com.erik.confirm2me.customcontrol.Confirm2MeTextView
            android:id="@+id/txt_tabtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/micro"
            app:typeface="lato"
            android:textSize="@dimen/text_xsmall"
            android:text="Tab Text"
            android:textAlignment="center"
            android:textColor="@color/TabSelected"/>

    </LinearLayout>

</FrameLayout>

